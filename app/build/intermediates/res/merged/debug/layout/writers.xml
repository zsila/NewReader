<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#D60B22"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/haberler_pasif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.25"
            android:src="@drawable/newspaper1" />

        <ImageView
            android:id="@+id/yazar_pasif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/haberler_pasif"
            android:layout_weight="0.25"
            android:src="@drawable/yazarlar" />

        <ImageView
            android:id="@+id/foto_pasif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/yazar_pasif"
            android:layout_weight="0.25"
            android:src="@drawable/fotogaleri_pasif" />

        <ImageView
            android:id="@+id/video_pasif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/foto_pasif"
            android:layout_weight="0.25"
            android:src="@drawable/videogaleri_pasif" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listWriters"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:layout_below="@+id/linearLayout" />


</RelativeLayout>